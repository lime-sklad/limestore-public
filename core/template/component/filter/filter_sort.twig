{% if data1.filter_list %}
<div class="filter_buttons_wrapper">

	<div class="filter_block_open_wrp">
		<a href="javascript:void(0)" class="filter_wodjet_button_style open_filter_widjet">
			{# 
			<span class="mark mark--img">
				<img src="/assets/img/icon/filter-icon.png">
				<img src="/assets/img/svg-icon/options-outline.svg">
			</span> 
			#}
			<span class="button-icon-i button-icon-left filter-sort-wrapper-btn">
				<i class="las la-sort-amount-down"></i>
			</span>
			<span class="mark mark--name filter_widjet_btn_title">Filter</span>
			<span class="mark filter-count"></span>
		</a>
	</div>

	<div class="filter_content">
		<ul class="filter_button_dropdown_serch_list">
			<div class="row">
				{% for key, parent in data.filter_list %}
					<li class="filter_return_list ls-select-list">
						<div class="filter_check_count"></div>
						<div class="select-drop-down">
							<input type="button"  class="drop_down_btn filter_input_height_modify" value="{{parent.title}}" default-value="{{parent.title}}">
							<div class="reset_option">
								<div role="button" class="ls-reset-option ls-reset-option-style">
									<i class="reset-filter-icon button-icon-i las la-angle-down"></i>
								</div>
							</div>
						</div>
						<div class="ls-select-option-list">
							<ul class="ls-select-list-option ls-custom-scrollbar">
								{% for key, row in parent.compelte  %}
									<li class="filter-check-list-style">
										<a href="javascript:void(0)" class="filter-check-style filter-check" id="{{row.id}}" filter-type="{{row.filter_type}}" filter-val="{{row.value}}">
											<span class="mark mark-filter-checked-icon">
												<img src="/assets/img/icon/check-white.png">
											</span>
											<span class="mark filter-name">{{row.value}}</span>
											<span class="mark filter-mark-text">{{parent.short_name}}</span>
										</a>	
									</li>
								{% endfor %}									
							</ul>
						</div>
					</li>
                {% endfor %}
			</div>	
		</ul>		
	</div>

</div>
{% endif %}


{% if data.filter_list %}
	<div class="filter-container area-container">
		{# <a href="javascript:void(0)" class="widget__button widget__button-filter widget__button-action flex-cntr area-button" role="button">
			<span class="widget__button-icon button-icon-i button-icon-left">
