            {% set searh_param = {
				inputClassList: 'widget__button-filter widget__button-action flex-cntr area-button ',
				inputIcon: {
					icon: 'las la-sort-amount-down',
					iconRight: false,
				},
				attr: {
					type: 'button',
					value: 'Filter'
				}
            }
            %}

		{% include '/component/parts/input.twig'  with { 'data': searh_param }  %}
			<span class="widget__mark filter-count widget__mark-rigt"></span>

		<div class="widget__content area-content widget__content-filter">

			<ul class="select-list checker-list width-100 ls-custom-scrollbar">
				{% for key, parent in data.filter_list %}
				<li class="select-items area-container">

					<a href="javascript:void(0)" class=" area-button sub-area select-item">
						<span class="widget__mark selected-items-count">
						</span>				
						<span class="widget__button-text">
							{{parent.filter_prefix_title}}
						</span>
						<span class="widget__button-icon widget__icon-arrow button-icon-i button-icon-right">
							<i class="las la-angle-down"></i>
						</span>						
					</a> 

					<div class="sub--select-list area-content" style="display: none;">
						<ul class="select-sub-items select-list ls-custom-scrollbar width-100 checkbox-container">

							{% for key, row in parent.list  %}
							<li class="select-items checkbox-list">
								<a href="javascript:void(0)" class="select-item select-sub-item filter-check checkbox-item" id="{{row.filter_id}}" filter-type="{{row.filter_type}}" filter-val="{{row.filter_value}}">
									<span class="widget__check-icon">
										<i class="las la-check"></i>
									</span>
									<span class="widget__button-text">{{row.filter_value}}</span>
									<span class="widget__mark">{{parent.filter_short_name}}</span>
								</a>
							</li>	
							{% endfor %}

						</ul>
					</div>

				</li>
				{% endfor %}				
			</ul>
			
			<div class="checked-filter-list not-closeable sub-area ls-custom-scrollbar animate__animated animate__lsFadeIn25 animate__fast"></div>
			
		</div>

	</div>
{% endif %}