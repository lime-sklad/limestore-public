    {% set tags_config = {
        label: 'Заголовок',

        fields: {
            class_list: ''
        },

        container: {
            class_list: 'container'
        },
        input: {
            class_list: row.custom_data[row.value] ~ ' button-tags ',
            attribute: {
                'data-old-class': row.custom_data[row.value],
            },
            value: 'BUTTON'
        },
        hidden_input: {
            class_list: '',
            attribute: {
                'data-fields-name': 'fdsfds',
                'data-old-id': '',
                
            }
        },

        list: {
            container: {
                class_list: ''
            },
            item: {
                class_list: 'change-button-tags',
                attribute: {
                }
            },
            
            data: row.custom_data,
        }
    }
    %} 
    
    
